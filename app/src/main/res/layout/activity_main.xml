<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/calcDisplay"
		android:layout_width="wrap_content"
		android:layout_height="350dp"
		android:clickable="false"
		android:longClickable="false"
		android:minHeight="179dp"
		android:minWidth="50dp"
		app:layout_constraintBottom_toTopOf="@+id/calcKeyboard"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0">

		<!--<io.github.kexanie.library.MathView-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--app:engine="KaTeX"-->
		<!--app:text="\\(c = \\pm\\sqrt{a^2 + b^2}\\)"-->
		<!--android:layout_marginTop="8dp" />-->
		<TextView
			android:id="@+id/dispTXT"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:linksClickable="true"
			android:longClickable="true"
			android:minHeight="50dp"
			android:textAlignment="textStart"
			android:textIsSelectable="true"
			android:textSize="24sp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
		<com.vargo.geoff.gvcalc.view.MathJaxWebView
			android:id="@+id/formula_one"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:backgroundTint="#7fa87f"
			android:minHeight="50dp"
			android:minWidth="100dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio=""
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/dispTXT"
			android:layout_marginBottom="8dp"/>
		<com.mpt.android.stv.SpannableTextView
			android:id="@+id/spanny"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="TextView"
			app:layout_constraintTop_toBottomOf="@id/formula_one"/>
	</android.support.constraint.ConstraintLayout>
